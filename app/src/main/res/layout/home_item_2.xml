<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.colin.playerdemo.customeview.third.RoundImageView
        android:id="@+id/home_item_1_image"
        android:layout_width="111dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/sm_bg"
        app:layout_constraintDimensionRatio="6:7"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="2dp"
        app:type="round" />

    <ImageView
        android:layout_width="111dp"
        android:layout_height="160dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:background="@color/translucence" />

    <TextView
        android:id="@+id/home_item_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_item_1_image"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="@dimen/space_8"
        android:lines="1"
        android:maxEms="6"
        tools:text="封面文字介绍..."
        android:textColor="@color/core_common_text_gray" />

    <TextView
        android:id="@+id/grade_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/home_item_1_image"
        android:layout_alignBottom="@+id/home_item_1_image"
        android:layout_margin="8dp"
        tools:text="7.2"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12" />
</RelativeLayout>
