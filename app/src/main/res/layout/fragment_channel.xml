<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:background="@color/full_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/channel_tl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:tl_textBold="SELECT"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/core_common_text_gray"
            app:tl_textUnselectColor="@color/core_common_text_gray"
            app:tl_textsize="@dimen/text_size_16">
        </com.flyco.tablayout.SlidingTabLayout>
    </LinearLayout>
    <com.colin.tomvod.customeview.CustomViewPager
        android:id="@+id/channel_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
