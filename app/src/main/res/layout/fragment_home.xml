<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:background="@color/full_transparent"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/search_layout"
            android:background="@drawable/round_bc_all_black_circle_16"
            android:layout_width="239dp"
            android:layout_height="@dimen/space_30"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/space_12">
            <ImageView
                android:layout_marginStart="@dimen/space_8"
                android:layout_gravity="center_vertical"
                app:srcCompat="@mipmap/icon_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textColor="@color/core_common_text_gray"
                android:layout_gravity="center_vertical"
                android:text="输入关键词查找片源"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="@dimen/space_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/scan_iv"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="@mipmap/icon_scan"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/cache_iv"
                app:srcCompat="@mipmap/icon_download"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/record_iv"
                app:srcCompat="@mipmap/icon_time"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/refresh_find"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.colin.banner.BannerLayout
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:autoPlaying="true"
                app:centerScale="1"
                app:indicatorGravity="center"
                app:itemSpace="20"
                app:moveSpeed="1.8"
                app:showIndicator="true" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/class_rv"
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:overScrollMode="never"
                android:id="@+id/home_rv"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>

