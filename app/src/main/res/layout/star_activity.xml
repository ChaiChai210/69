<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/full_transparent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:overScrollMode="never">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/bc_iv"
                    android:layout_width="match_parent"
                    android:layout_height="184dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/star_bg" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:alpha="0.5"
                    android:background="#000000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="184dp">

                    <com.colin.playerdemo.customeview.third.RoundImageView
                        android:id="@+id/star_image"
                        android:layout_width="71dp"
                        android:layout_height="71dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="30dp"
                        android:adjustViewBounds="true"
                        android:alpha="1"
                        android:scaleType="center"
                        android:src="@mipmap/star"
                        app:layout_constraintDimensionRatio="6:7"
                        app:layout_constraintTop_toTopOf="parent"
                        app:radius="2dp"
                        app:type="circle" />

                    <TextView
                        android:id="@+id/num_tv"
                        android:layout_width="70dp"
                        android:layout_height="24dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/space_8"
                        android:layout_marginBottom="@dimen/space_20"
                        android:alpha="1"
                        android:background="@drawable/coumm_change_shade"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13"
                        tools:text="10部影片" />


                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/star_image"
                        android:layout_marginLeft="@dimen/space_20"
                        android:layout_marginTop="@dimen/space_8"
                        android:layout_toRightOf="@+id/star_image"
                        android:textColor="@color/white"
                        tools:text="哈妮克孜" />

                    <TextView
                        android:id="@+id/ohter_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_tv"
                        android:layout_marginLeft="@dimen/space_20"
                        android:layout_marginTop="@dimen/space_15"
                        android:layout_toRightOf="@+id/star_image"
                        android:textColor="#CCCCCC"
                        android:textSize="13sp"
                        tools:text="身高: 168cm 三围: 12/12/12 罩杯: 杯" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="184dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_12"
                        android:layout_marginTop="@dimen/space_20"
                        android:text="简介"
                        android:textColor="@color/activity_title_center_text_black"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/introduce_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="@dimen/space_12"
                        android:textColor="@color/text_color_6"
                        tools:text="某某某的信息简介..." />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_10"
                        android:layout_marginTop="@dimen/space_8"
                        android:background="#F5F5F5" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/space_12"
                            android:text="相关播放"
                            android:textColor="@color/activity_title_center_text_black"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/more_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="29dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_13"
                            android:layout_toLeftOf="@+id/near_tv"
                            android:gravity="center"
                            android:paddingLeft="@dimen/space_12"
                            android:paddingRight="@dimen/space_12"
                            android:text="最多播放"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/near_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="29dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_12"
                            android:background="@drawable/boder_all_circular_12"
                            android:gravity="center"
                            android:paddingLeft="@dimen/space_12"
                            android:paddingRight="@dimen/space_12"
                            android:text="最近播放"
                            android:textColor="#666666" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_1"
                        android:background="@color/ColorLine" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/star_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:orientation="vertical">

                    </androidx.recyclerview.widget.RecyclerView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/space_12"
                        android:text="--已经全部加载完毕 --"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/space_20"
        android:paddingLeft="12dp"
        android:paddingRight="15dp"
        android:src="@mipmap/icon_nav_back" />

</RelativeLayout>
