<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/playlayout"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/refresh_find"
        android:layout_above="@+id/play_send_layout"
        android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent">
        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <com.dueeeke.videoplayer.player.IjkVideoView
                android:id="@+id/play_player"
                android:layout_width="match_parent"
                android:layout_height="240dp" />
            <FrameLayout
                android:id="@+id/f_load_gg"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                >
                <ImageView
                    android:id="@+id/img_gg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <com.colin.playerdemo.customeview.third.RoundProgressBar
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/load_goto_gg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:textColor="@color/red"
                    app:fillRoundColor="@color/login_bc_tv"
                    app:roundColor="@color/red"
                    app:roundProgressColor="@color/login_bc_tv"
                    app:roundWidth="5dip"
                    app:textColor="@color/white"
                    app:textIsDisplayable="false" />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/play_layout"
                android:layout_below="@+id/play_player"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ads_iv"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/space_12"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_12"
                android:layout_marginRight="@dimen/space_12">

                <TextView
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/space_3"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/normal_iv"
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="视频标题, 视频标题..."
                    android:textColor="@color/activity_title_center_text_black"
                    android:textSize="@dimen/text_size_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_tv"
                    android:layout_marginTop="@dimen/space_12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tiem_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-12-20"
                        android:textColor="#999999"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_30"
                        tools:text="6"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_3"
                        android:text="次播放"
                        android:textColor="#999999"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/unpraise_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/space_4"
                    app:srcCompat="@mipmap/unpraise_unpress" />

                <ProgressBar
                    android:id="@+id/play_pBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="@dimen/space_8"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_marginTop="4dp"
                    android:layout_toLeftOf="@+id/unpraise_iv"
                    android:progress="5"
                    android:progressDrawable="@drawable/u_progressbar_style" />

                <ImageView
                    android:id="@+id/normal_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/play_pBar"
                    android:padding="@dimen/space_4"
                    app:srcCompat="@mipmap/image_comment_zan_normal" />

                <TextView
                    android:id="@+id/zan_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/play_pBar"
                    android:layout_alignRight="@+id/play_pBar"
                    android:layout_below="@+id/play_pBar"
                    android:layout_marginTop="@dimen/space_2"
                    android:gravity="center"
                    tools:text="55%的人觉得很赞"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_10" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/title_layout"
                android:background="@drawable/boder_all_circular_3"
                android:layout_width="match_parent"
                android:layout_margin="12dp"
                android:layout_height="40dp">
                <TextView
                    android:ellipsize="end"
                    android:layout_marginRight="44dp"
                    android:id="@+id/content_tv"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/text_size_12"
                    android:layout_centerVertical="true"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size_13"
                    tools:text="视频标题, 视频标题..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="@dimen/text_size_12"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@mipmap/ic_arrow_right_brown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="@dimen/space_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/text_color"
                    android:text="简介"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/dic_layout"
                android:layout_below="@+id/play_player"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_centerVertical="true"
                    app:srcCompat="@mipmap/icon_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/play_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42dp"
                    tools:text="46热评"
                    android:textColor="@color/text_color_6"
                    android:textSize="@dimen/text_size_13" />

                <ImageView
                    android:id="@+id/send_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/space_8"
                    android:paddingRight="9dp"
                    app:srcCompat="@mipmap/send_nopress" />

                <ImageView
                    android:id="@+id/download_nopress_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/send_iv"
                    android:paddingLeft="@dimen/space_8"
                    android:paddingRight="9dp"
                    app:srcCompat="@mipmap/download_press" />

                <ImageView
                    android:id="@+id/favor_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/download_nopress_iv"
                    android:paddingLeft="@dimen/space_8"
                    android:paddingRight="9dp"
                    app:srcCompat="@mipmap/favor_nopress" />
            </RelativeLayout>
            <View
                android:background="@color/ColorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"/>
            <TextView
                android:textColor="@color/activity_title_center_text_black"
                android:textSize="@dimen/text_size_15"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_12"
                android:text="猜你喜欢"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_guess_like"
                android:layout_marginTop="@dimen/space_15"
                android:overScrollMode="never"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/love_more_tv"
                android:paddingRight="@dimen/space_50"
                android:paddingLeft="@dimen/space_50"
                android:layout_marginTop="@dimen/space_15"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/guess_see_more"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/text_color"
                android:text="查看更多"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="@dimen/space_15"
                android:background="@color/ColorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"/>
            <RelativeLayout
                android:layout_marginTop="@dimen/space_8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50">
                <TextView
                    android:layout_marginLeft="@dimen/text_size_12"
                    android:layout_centerVertical="true"
                    android:textColor="@color/activity_title_center_text_black"
                    android:textSize="@dimen/space_15"
                    android:text="全部评论"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/p_num_tv"
                    android:textColor="#999999"
                    android:layout_marginLeft="80dp"
                    android:layout_centerVertical="true"
                    android:text="2条"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/new_tv"
                    android:text="最新"
                    android:textColor="@color/activity_title_center_text_black"
                    android:textSize="@dimen/text_size_13"
                    android:layout_marginRight="@dimen/text_size_12"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_width="49dp"
                    android:layout_height="24dp" />
                <TextView
                    android:background="@drawable/coumm_change_shade"
                    android:id="@+id/hot_tv"
                    android:textColor="@color/white"
                    android:text="热门"
                    android:textSize="@dimen/text_size_13"
                    android:layout_marginRight="80dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_width="49dp"
                    android:layout_height="24dp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <com.colin.customeview.third.RoundImageView
                    android:id="@+id/p_image"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/img7"
                    app:type="circle"
                    app:radius="2dp"
                    app:layout_constraintDimensionRatio="6:7"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/play_send_tv"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_12"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size_13"
                    android:hint="快来说说你的感想吧!"
                    android:background="@drawable/boder_all_circular_gray_22"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_40" />
            </LinearLayout>
            <View
                android:layout_marginRight="@dimen/space_12"
                android:layout_marginLeft="@dimen/space_12"
                android:background="@color/ColorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:overScrollMode="never"
                android:id="@+id/p_rv"
                android:layout_marginTop="@dimen/space_8"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/child_layout"
                android:visibility="gone"
                android:layout_below="@+id/play_player"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/title_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_12"
                        tools:text="视频标题, 视频标题..."
                        android:textColor="@color/activity_title_center_text_black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/close_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/space_12"
                        android:scaleType="center"
                        app:srcCompat="@mipmap/dialog_close" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_1"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/play_cnum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_12"
                    tools:text="播放: 66万次播放"
                    android:textColor="@color/text_color_6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/space_12"
                        android:text="标签:"
                        android:textColor="@color/text_color_6" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tag_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_5"
                        android:layout_gravity="center">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:layout_margin="@dimen/space_12"
                    android:background="@color/ColorLine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_12"
                    android:text="简介"
                    android:textColor="@color/activity_title_center_text_black"
                    android:textSize="@dimen/space_15" />

                <TextView
                    android:id="@+id/jianjie_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:text="视频简介, 视频简介, 视频简介..."
                    android:textColor="@color/text_color_6"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/commnet_layout"
                android:layout_below="@+id/play_player"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="评论详情"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/comment_close_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/space_12"
                        android:scaleType="center"
                        app:srcCompat="@mipmap/dialog_close" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_1"
                        android:layout_alignParentBottom="true"
                        android:background="@color/ColorLine" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp">
                    <com.colin.customeview.third.RoundImageView
                        android:id="@+id/head_image"
                        android:layout_width="54dp"
                        android:layout_marginTop="@dimen/space_8"
                        android:layout_height="54dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/ic_head_l"
                        app:type="circle"
                        app:radius="2dp"
                        app:layout_constraintDimensionRatio="6:7"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_marginTop="@dimen/space_6"
                        android:layout_marginLeft="@dimen/space_12"
                        android:layout_toRightOf="@+id/head_image"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/activity_title_center_text_black"
                        android:text="用户昵称"
                        android:drawablePadding="@dimen/space_4"
                        android:drawableRight="@mipmap/boy_comment_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/time_tv"
                        android:layout_marginTop="@dimen/space_8"
                        android:layout_marginLeft="@dimen/space_12"
                        android:layout_below="@+id/name_tv"
                        android:layout_toRightOf="@+id/head_image"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:text="2小时前"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>
                <TextView
                    android:id="@+id/show_content_tv"
                    android:textColor="@color/activity_title_center_text_black"
                    android:text="评论内容, 评论内容, 评论内容..."
                    android:layout_margin="@dimen/space_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/ColorLine" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/comment_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <ImageView
        android:id="@+id/activity_title_include_left_iv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/space_20"
        android:paddingLeft="12dp"
        android:paddingRight="15dp"
        app:srcCompat="@mipmap/icon_nav_back" />
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/play_send_layout"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <com.colin.customeview.third.RoundImageView
            android:layout_centerVertical="true"
            android:id="@+id/send_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@mipmap/img7"
            app:type="circle"
            app:radius="2dp"
            app:layout_constraintDimensionRatio="6:7"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/send_image"
            android:id="@+id/com_edt"
            android:singleLine="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="@dimen/space_12"
            android:gravity="center"
            android:layout_toLeftOf="@+id/send_tv"
            android:layout_gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_13"
            android:hint="快来说说你的感想吧!"
            android:background="@drawable/boder_all_circular_gray_22"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_30" />
        <TextView
            android:id="@+id/send_tv"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="发送"
            android:layout_width="@dimen/space_40"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>


