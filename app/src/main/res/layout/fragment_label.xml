<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/lable_title_rv"
        android:layout_marginTop="@dimen/space_10"
        android:overScrollMode="never"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:layout_below="@+id/lable_title_rv"
        android:id="@+id/bottom_label_layout"
        android:layout_marginTop="@dimen/space_20"
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/lable_rv"
            android:overScrollMode="never"
            android:background="@color/white"
            android:paddingBottom="45dp"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
<!--        <TextView-->
<!--            android:id="@+id/confirm_tv"-->
<!--            android:layout_marginBottom="60dp"-->
<!--            android:background="@drawable/coumm_change_shade"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="@dimen/text_size_15"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:text="确定"-->
<!--            android:gravity="center"-->
<!--            android:layout_width="175dp"-->
<!--            android:layout_height="36dp" />-->
    </RelativeLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/refresh_find"
        android:layout_marginTop="@dimen/space_10"
        android:layout_below="@+id/lable_title_rv"
        android:visibility="gone"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:overScrollMode="never"
                android:id="@+id/content_rv"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:visibility="gone"
                android:layout_below="@+id/content_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="--已经全部加载完毕 --"
                android:textColor="#999999"
                android:layout_marginBottom="@dimen/space_10"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:id="@+id/no_layout"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    app:srcCompat="@mipmap/img_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/activity_title_center_text_black"
                    android:layout_gravity="center_horizontal"
                    android:text="没有搜索到你想要的视频"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--<TextView-->
                    <!--android:layout_marginTop="@dimen/space_20"-->
                    <!--android:textSize="@dimen/text_size_13"-->
                    <!--android:textColor="@color/core_common_text_gray"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:text="在详情页可点击离线缓存按钮进行缓存"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->

            </LinearLayout>
        </RelativeLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</RelativeLayout>
