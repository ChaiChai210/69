<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@mipmap/login_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF6F1">

        <TextView
            android:id="@+id/phone_login_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="手机账号登录"
            android:textColor="#B88A52"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/psd_login_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户名登录"
            android:textColor="#DDD4C5"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/phone_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_phone" />

        <TextView
            android:id="@+id/phone_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_12"
            android:text="+86"
            android:textColor="@color/activity_title_center_text_black"
            android:textSize="@dimen/text_size_15" />

        <EditText
            android:id="@+id/phone_edt"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/space_30">

        <ImageView
            android:id="@+id/cod_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_password" />

        <EditText
            android:id="@+id/psd_edt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_toLeftOf="@+id/show_iv"
            android:layout_toRightOf="@+id/cod_iv"
            android:background="@null"
            android:hint="请输入密码"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="@dimen/space_12" />

        <ImageView
            android:id="@+id/show_iv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/text_size_15"
            android:scaleType="center"
            android:src="@mipmap/login_eye_open" />
    </RelativeLayout>

    <TextView
        android:id="@+id/fgt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="@dimen/space_12"
        android:text="忘记密码?"
        android:textColor="#999999"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="321dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/boder_all_circular_22"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/new_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:padding="@dimen/space_10"
        android:text="注册新账号"
        android:textColor="#C2963D"
        android:textSize="@dimen/text_size_15" />
</LinearLayout>
