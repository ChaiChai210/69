<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/manage_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030303"
    android:orientation="vertical">

    <include layout="@layout/activity_title_include" />

    <RelativeLayout
        android:id="@+id/change_head_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/space_10"
        android:background="#323232">

        <com.colin.playerdemo.customeview.third.RoundImageView
            android:id="@+id/set_image"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/space_12"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/img7"
            app:layout_constraintDimensionRatio="6:7"
            app:layout_constraintTop_toTopOf="parent"
            app:radius="2dp"
            app:type="circle" />

        <ImageView
            android:id="@+id/next_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_12"
            android:src="@mipmap/ic_arrow_right_brown" />

        <ImageView
            android:id="@+id/head_1_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_8"
            android:layout_toLeftOf="@+id/head_tv"
            android:background="@drawable/shape_red" />

        <TextView
            android:id="@+id/head_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_12"
            android:layout_toLeftOf="@+id/next_iv"
            android:text="修改头像"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/change_name_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/space_10"
        android:background="#323232">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_12"
            android:text="昵称"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/next_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_12"
            android:src="@mipmap/ic_arrow_right_brown" />

        <ImageView
            android:id="@+id/name_1_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_8"
            android:layout_toLeftOf="@+id/name_tv"
            android:background="@drawable/shape_red" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_12"
            android:layout_toLeftOf="@+id/next_iv1"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/change_sex_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/space_1"
        android:background="#323232">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_12"
            android:text="性别"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/next_iv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_12"
            android:src="@mipmap/ic_arrow_right_brown" />

        <ImageView
            android:id="@+id/sex_1_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_8"
            android:layout_toLeftOf="@+id/sex_tv"
            android:background="@drawable/shape_red" />

        <TextView
            android:id="@+id/sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_12"
            android:layout_toLeftOf="@+id/next_iv0"
            android:text="未设定"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/change_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/space_1"
        android:background="#323232">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_12"
            android:text="手机号"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/next_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_12"
            android:src="@mipmap/ic_arrow_right_brown" />

        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_12"
            android:layout_toLeftOf="@+id/next_iv2"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/change_psd_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/space_1"
        android:background="#323232">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_12"
            android:text="修改密码"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/next_iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_12"
            android:src="@mipmap/ic_arrow_right_brown" />

        <TextView
            android:id="@+id/change_psd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_12"
            android:layout_toLeftOf="@+id/next_iv3"
            android:text="绑定手机号后可修改密码"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/quit_tv"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/coumm_change_shade"
        android:gravity="center"
        android:text="退出"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15" />
</LinearLayout>
