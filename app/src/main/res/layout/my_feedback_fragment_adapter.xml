<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tiem_tv"
        android:layout_margin="@dimen/space_12"
        android:paddingRight="@dimen/space_12"
        android:paddingBottom="@dimen/space_8"
        android:paddingTop="@dimen/space_8"
        android:paddingLeft="@dimen/space_12"
        android:background="@drawable/boder_all_circular1_15"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_13"
        tools:text="反馈时间: 2018-12-31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_margin="@dimen/space_12"
        android:orientation="vertical"
        android:background="@drawable/boder_all_circular_white_f8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_tv"
            android:textColor="@color/activity_title_center_text_black"
            android:textSize="@dimen/text_size_13"
            android:layout_marginTop="@dimen/space_22"
            android:layout_marginLeft="@dimen/space_12"
            tools:text="反馈类型: 视频不全"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/content_tv"
            android:textColor="@color/activity_title_center_text_black"
            android:textSize="@dimen/text_size_13"
            android:singleLine="true"
            android:layout_marginRight="@dimen/space_12"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginBottom="@dimen/space_20"
            tools:text="反馈内容: 内容描述, 内容描述, 内容描述..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/img_layout"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
</LinearLayout>
