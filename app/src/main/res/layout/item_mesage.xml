<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <com.colin.tomvod.customeview.third.RoundImageView
        android:id="@+id/procla_image"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/star"
        app:layout_constraintDimensionRatio="6:7"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="2dp"
        app:type="round" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_8"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/space_10"
        android:layout_toLeftOf="@+id/time_tv"
        android:layout_toRightOf="@+id/procla_image"
        android:singleLine="true"
        android:text="用户昵称"
        android:textColor="@color/activity_title_center_text_black"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tv"
        android:layout_marginLeft="@dimen/space_8"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginRight="@dimen/space_8"
        android:layout_toRightOf="@+id/procla_image"
        android:singleLine="true"
        android:text="对你的评论回复"
        android:textColor="@color/text_color_6"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginRight="@dimen/space_22"
        android:text="2018-12-31" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_alignParentBottom="true"
        android:background="@color/ColorLine" />
</RelativeLayout>
