<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_comment_header"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="评论详情"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/comment_close_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_12"
            android:scaleType="center"
            app:srcCompat="@mipmap/dialog_close" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_alignParentBottom="true"
            android:background="@color/ColorLine" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_comment"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@+id/rl_comment_header">

        <com.colin.playerdemo.customeview.third.RoundImageView
            android:id="@+id/head_image"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="@dimen/space_8"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_head_l"
            app:layout_constraintDimensionRatio="6:7"
            app:layout_constraintTop_toTopOf="parent"
            app:radius="2dp"
            app:type="circle" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginTop="@dimen/space_6"
            android:layout_toRightOf="@+id/head_image"
            android:drawableRight="@mipmap/boy_comment_mark"
            android:drawablePadding="@dimen/space_4"
            android:textColor="@color/activity_title_center_text_black"
            android:textSize="@dimen/text_size_14"
            tools:text="用户昵称" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginTop="@dimen/space_8"
            android:layout_toRightOf="@+id/head_image"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="2小时前" />


    </RelativeLayout>

    <TextView
        android:id="@+id/show_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_user_comment"
        android:layout_margin="@dimen/space_12"
        android:textColor="@color/activity_title_center_text_black"
        tools:text="评论内容, 评论内容, 评论内容..." />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_alignParentBottom="true"
        android:background="@color/ColorLine" />

    <TextView
        android:id="@+id/tv_all_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_content_tv"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginTop="@dimen/space_12"
        android:text="全部评论"
        android:textColor="@color/activity_title_center_text_black" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_all_reply">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_comment_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"></androidx.recyclerview.widget.RecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:id="@+id/play_send_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true">

        <com.colin.playerdemo.customeview.third.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/img7"
            app:radius="2dp"
            app:type="circle" />

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_30"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/space_12"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:background="@drawable/boder_all_circular_gray_22"
            android:gravity="center"
            android:hint="快来说说你的感想吧!"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/tv_send_comment"
            android:layout_width="@dimen/space_40"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/space_12"
            android:gravity="center"
            android:text="发送" />
    </LinearLayout>
</RelativeLayout>
